  <head runat="server">
    <title>HelpIsHere.org - Resource Search Engine For Those Affected By Life Altering Disease</title>
    <%= stylesheet_link_tag 'splash_styles' %>
  </head>
  <body style="margin: 0px; font-family: Helvetica,Arial,sans-serif; font-size: 12pt;">
    <div style="background:white;">
      <div style="height:235px;background:white">
